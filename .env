# 应用配置
NODE_ENV=development
PORT=3000

# 数据库配置 (MySQL 5.7+)
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=root
DB_DATABASE=telegram_monitor
DB_SYNCHRONIZE=true

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Telegram API 配置 (需要从 https://my.telegram.org 获取)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_SESSION_PATH=./sessions

# 日志配置
LOG_LEVEL=info
